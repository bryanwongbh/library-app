<form class="form-horizontal">
	{{#if responseMessage}}
  	<div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}
  <div class="form-group {{emailValidation}} has-feedback">  	
    <label class="control-label col-sm-3" for="contactEmail">Email address</label>
    <div class="col-sm-9">
      {{input type="email" value=emailAddress class="form-control" placeholder="email@example.com" autofocus="autofocus" id="contactEmail" aria-describedby="contactEmailStatus"}}
      <span class="glyphicon {{emailValidationGlyphicon}} form-control-feedback" aria-hidden="true"></span>
      <span id="contactEmailStatus" class="sr-only">({{emailValidationText}})</span>
    </div>
  </div>
   <div class="form-group {{messageValidation}} has-feedback">
   	<label class="control-label col-sm-3" for="message">Your Message</label>
    <div class="col-sm-9">
      {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
      <span class="glyphicon {{messageValidationGlyphicon}} form-control-feedback" aria-hidden="true"></span>
      <span id="messageStatus" class="sr-only">({{messageValidationText}})</span>
    </div>
  </div>
  <div class="col-sm-3 col-sm-offset-3">
  	<button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'sendMessage'}}>Send Message</button>
  </div>
</form>